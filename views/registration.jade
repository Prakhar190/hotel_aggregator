extends layout1

block content

	.row
		.col-md-6.col-md-offset-3.searchForm
			form(action='signup' method='post')
				div.formheading Fill in your details
				.form-group
					p
						label Email &nbsp;
						if message
							B.message #{message}
						input(type='text' name='email' class='form-control' data-validation='email')
					p
						label Password
						input(type='password' name='pass_confirmation' class='form-control' data-validation='strength' data-validation-strength='1')
					p
						label Confirm Password
						input(type='password' name='pass' data-validation='confirmation' class='form-control' data-validation-error-msg='Values do not Match')
					p
						label First Name
						input(type='text' name='firstname' data-validation='custom' data-validation-regexp='^([a-zA-Z]+)$' data-validation-error-msg='Please enter only alphabets' class='form-control')
					p
						label Last Name
						input(type='text' name='lastname' data-validation='custom' data-validation-regexp='^([a-zA-Z]+)$' data-validation-error-msg='Please enter only alphabets' class='form-control')
					br
					
					.row
						.col-md-2
							label Gender
					.row
						.col-md-3.col-md-offset-2
							.form-group
								input(type='radio', name='sex', value='male')
								&nbsp;
								label Male
					.row
						.col-md-3.col-md-offset-2
							.form-group
									
									input(type='radio', name='sex', value='female')
									&nbsp;
									label Female
					
				
					p
						label Mobile
						input(type='text' name='mobile' data-validation='length number' data-validation-length='10-10' data-validation-error-msg='Mobile number should be numeric and of 10 digits' class='form-control')
					br
					input(type='submit' value='Create Account' class='btn btn-danger btn-search-hotel')
	
						