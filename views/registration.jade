extends layout

block content
	.row
		.col-md-6.col-md-offset-3.searchForm
			form(action='signup' method='post')
				div.formheading Fill in your details
				.form-group
					label Email &nbsp;
					if message
						B.message #{message}
					input(type='text' name='email' required class='form-control')

					label Password
					input(type='password' name='password' required class='form-control')
					label Confirm Password
					input(type='password' name='confirmpassword' required class='form-control')
					label First Name
					input(type='text' name='firstname' required class='form-control')
					label Last Name
					input(type='text' name='lastname' class='form-control')
					br
					
					.row
						.col-md-2
							label Gender
					.row
						.col-md-3.col-md-offset-2
							.form-group
								input(type='radio', name='sex', value='male')
								&nbsp;
								label Male
					.row
						.col-md-3.col-md-offset-2
							.form-group
									
									input(type='radio', name='sex', value='female')
									&nbsp;
									label Female
					
				
					label Mobile
					input(type='text' name='mobile' required class='form-control')
					br
					input(type='submit' value='Create Account' class='btn btn-danger btn-search-hotel')
	
			



	